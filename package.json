{
	"name": "trivy-glass",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check vite.config.ts src && eslint vite.config.ts src && svelte-check --tsconfig ./tsconfig.json",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"test:api": "npm run test:unit -- --run src/routes/api/clusters/server.test.ts src/routes/api/clusters/switch/server.test.ts src/routes/api/clusters/name-param/server.test.ts"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.8",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.20.7",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.7",
		"@tailwindcss/vite": "^4.0.0",
		"autoprefixer": "^10.4.21",
		"eslint": "^9.25.1",
		"eslint-config-prettier": "^10.1.2",
		"eslint-plugin-svelte": "^2.46.1",
		"flowbite-svelte": "^1.5.5",
		"flowbite-svelte-icons": "^2.2.0",
		"globals": "^15.15.0",
		"jsdom": "^25.0.1",
		"postcss": "^8.5.3",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.28.2",
		"svelte-check": "^4.1.6",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.31.1",
		"vite": "^6.3.4",
		"vitest": "^3.1.2"
	},
	"dependencies": {
		"@kubernetes/client-node": "^1.1.2",
		"@types/js-yaml": "^4.0.9",
		"js-yaml": "^4.1.0",
		"kampsy-ui": "^1.3.0",
		"redis": "^4.7.0"
	}
